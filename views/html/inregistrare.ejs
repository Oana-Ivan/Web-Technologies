<body>
	<%- include ("../fragmente/header.ejs")%>
		
	<main>
		

		<% if(!locals.rsstatus) { %><!-- verific daca status e definit-->
		<form method="post" class="date">
			<p>Inregistrare utilizator<br/>
			<p>
			<label>
				Username: <input type="text" name="username" value="username">
			</label>
			</p>
			<p>
			<label>
				Nume: <input type="text" name="nume" value="Nume utilizator">
			</label>
			</p>
			<p>
			<label>
				Parola: <input type="password" name="parola" value="" required>
			</label>
			</p>
			<p>
			<label>
				Reintroduceti parola: <input type="password" name="rparola" value="" required>
			</label>
			</p>
			<p>		
			<input type="submit" value="Submit">
			</p>
		</form>
		<% } else if (rsstatus == "ok"){ %>
			<p>Date introduse</p>
		<% } else {%>
			<p>Eroare</p>
		<% } %>
	</main>
	
	<%- include ("../fragmente/footer.ejs")%>
</body>

</html>